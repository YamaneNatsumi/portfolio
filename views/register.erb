<body id="firstView">
  <div class="loginWrap">
    <p class="loginLogo">
      <a href="/"><img src="/images/logo.png" alt="MECOM" width="155" height="52"></a>
    </p>
    <div class="registerBox whitebox">
  <h1>アカウントを作成</h1>
  <div class="registerFormWrap">
      <form method="POST" action="/register" enctype="multipart/form-data">
        <dl>
          <dt>ID</dt>
          <dd><input type="text" name="user"></dd>
          <dt>PASS</dt>
          <dd><input type="password" name="password"></dd>
          <dt>アカウント画像</dt>
          <dd class="fileform"><input type="file" name="file"></dd>
          <dt>自己紹介</dt>
          <dd><input type="text" name="comment"></dd>
        </dl>
        <input type="submit" value="アカウントを作成" id="registerBtn">
      </form>
      <p class="toRegister"><a href="/login">既にアカウントをお持ちの方はこちら</a></p>
    </div>
  </div>
  <p class="toHome"><a href="/">←Home</a></p>
  </div>




